@model BlogPost
<h2>Confirm Delete</h2>
-<div class="card shadow-lg p-3">
    <div class="card-body">
        <h4 class="text-danger">Are you sure you want to delete this post?</h4>
        <p><strong>Title:</strong> @Model.Title/p>
        <p><strong>Author:</strong> @Model.User.Name.ToString()</p>
        <p><strong>Published:</strong> @Model.PublishedDate.ToString("yyyy-MM-dd")</p>
        <form asp-controller="BlogPost" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>