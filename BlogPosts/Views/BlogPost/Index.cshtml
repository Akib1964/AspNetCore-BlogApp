@model IEnumerable<BlogPost>

<h2 class="mt-3 mb-3">All Blog Posts</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Post</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-3">
                    There are no blog posts available.
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>

                    <td>@item.User?.Name</td>

                    <td>@item.PublishedDate.ToString("yyyy-MM-dd")</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" asp-route-returnUrl="@Url.Action("Index", "BlogPost")">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
