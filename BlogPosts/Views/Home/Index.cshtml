@model List<BlogPost>

@{
    ViewData["Title"] = "Home BlogApp";
}

<br />
<h1 class="text-center mb-4">Welcome to Blog Application</h1>

@if (Model == null || !Model.Any())
{
    <p class="text-center">No posts available yet.</p>
}
else
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 d-flex justify-content-center mb-4">
                <div class="card h-100" style="max-width: 400px; height: 480px;">
                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title">@post.Title</h5>

                        <p class="text-muted">
                            By @post.User.Name on @post.PublishedDate.ToString("yyyy-MM-dd")
                        </p>

                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(post.Content) && post.Content.Length > 100)
                            {
                                @post.Content.Substring(0, 100) <text>...</text>
                            }
                            else
                            {
                                @post.Content
                            }
                        </p>

                        <div class="mt-auto">
                            <a asp-controller="BlogPost"
                               asp-action="Details"
                               asp-route-id="@post.Id" asp-route-returnUrl="@Url.Action("Index", "BlogPost")"
                               class="btn btn-primary w-100">
                                Read More
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
